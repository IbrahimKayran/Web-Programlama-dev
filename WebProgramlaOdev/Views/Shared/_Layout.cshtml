                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">
                                Anasayfa
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Köpekler Hakkında</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Kediler Hakkında</a>
                        </li>
                        @*Controllerdan sonra devamını yapacağız*@
                        @*<li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownPortfolio" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
                                <a class="dropdown-item" asp-area="" asp-controller="Kopek" asp-action="Index">Köpek</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Kedi" asp-action="Index">Kedi</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Urun" asp-action="Index">Ürünler</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Yorum" asp-action="Index">Yotumlar</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Uye" asp-action="Index">Üyeler</a>
                            </div>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link" href="#">Üye Ol</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Giriş Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - WebProgramlaOdev - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
